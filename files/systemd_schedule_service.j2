[Unit]
Description=dienstplan app service for scheduling worker timer
After=network.target

[Service]
Type=oneshot
WorkingDirectory={{ app_directory }}
EnvironmentFile={{ systemd_service_env }}
ExecStart=/bin/java -jar {{ app_file }} --mode schedule
User={{ app_username }}
Group={{ app_usergroup }}

[Install]
WantedBy=multi-user.target
